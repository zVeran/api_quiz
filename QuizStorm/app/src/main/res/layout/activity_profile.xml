<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/azulbackground"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F2FFFFFF"
        app:itemBackground="@color/white"
        app:itemHorizontalTranslationEnabled="true"
        app:itemIconTint="@color/dark"
        app:itemTextColor="@color/dark"
        app:labelVisibilityMode="auto"
        app:menu="@menu/bottom_nav_menu"></android.support.design.widget.BottomNavigationView>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"></FrameLayout>
    

</RelativeLayout>